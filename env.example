# MCP Atlassian - Node.js Implementation
# Copy this file to .env and fill in your credentials

# Confluence Configuration
CONFLUENCE_URL=https://your-company.atlassian.net/wiki
CONFLUENCE_USERNAME=your.email@company.com
CONFLUENCE_API_TOKEN=your_confluence_api_token

# Alternative: Personal Access Token for Confluence Server/Data Center
# CONFLUENCE_PERSONAL_TOKEN=your_confluence_personal_token
# CONFLUENCE_SSL_VERIFY=true

# Jira Configuration  
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your.email@company.com
JIRA_API_TOKEN=your_jira_api_token

# Alternative: Personal Access Token for Jira Server/Data Center
# JIRA_PERSONAL_TOKEN=your_jira_personal_token
# JIRA_SSL_VERIFY=true

# OAuth 2.0 Configuration (Advanced)
# ATLASSIAN_OAUTH_CLIENT_ID=your_oauth_client_id
# ATLASSIAN_OAUTH_CLIENT_SECRET=your_oauth_client_secret
# ATLASSIAN_OAUTH_REDIRECT_URI=http://localhost:8080/callback
# ATLASSIAN_OAUTH_SCOPE=read:jira-work write:jira-work read:confluence-content.all write:confluence-content offline_access
# ATLASSIAN_OAUTH_CLOUD_ID=your_cloud_id

# Optional Filtering
CONFLUENCE_SPACES_FILTER=DEV,TEAM,DOC
JIRA_PROJECTS_FILTER=PROJ,DEV,SUPPORT

# Optional Configuration
READ_ONLY_MODE=false
MCP_VERBOSE=false
ENABLED_TOOLS=confluence_search,confluence_get_page,jira_search_issues,jira_get_issue

# Transport Configuration (not yet implemented for HTTP)
TRANSPORT=stdio
PORT=8000
HOST=0.0.0.0
STREAMABLE_HTTP_PATH=/mcp 